<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="002-create-branch-table" author="Murad">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="branch"/>
            </not>
        </preConditions>
        <createTable tableName="branch">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="postal_address" type="varchar(255)"/>
            <column name="ceo_full_name" type="varchar(255)"/>
            <column name="ceo_birth_date" type="date"/>
            <column name="organization_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="branch"
                baseColumnNames="organization_id"
                constraintName="fk_branch_organization"
                referencedTableName="organization"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
